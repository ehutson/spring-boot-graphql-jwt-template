

# ==============================================
# BACKEND (Spring Boot) CONFIGURATION
# ==============================================

# Server Configuration
SERVER_PORT=8097

# Database Configuration
MONGO_URI=mongodb://localhost:27017/spring-graphql-template
MONGO_DATABASE=spring-graphql-template

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_COOKIE_SECURE=false
JWT_COOKIE_HTTP_ONLY=true
JWT_COOKIE_SAME_SITE=lax

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_DEV_EHUTSON=DEBUG

# ==============================================
# FRONTEND (Vite/React) CONFIGURATION
# Note: Frontend variables MUST be prefixed with FE_
# ==============================================

# API Configuration
FE_GRAPHQL_ENDPOINT=http://localhost:8097/graphql
FE_API_BASE_URL=http://localhost:8097

# Application Configuration
FE_APP_NAME='Spring GraphQL Template'
FE_APP_VERSION=1.0.0

# Feature Flags
FE_ENABLE_ERROR_TRACKING=true
FE_ENABLE_ANALYTICS=false

# Development Configuration
FE_SHOW_DEBUG_INFO=true